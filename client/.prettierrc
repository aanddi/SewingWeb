{
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
  "trailingComma": "none",
  "arrowParens": "avoid",
  "singleQuote": true,
  "printWidth": 120, 
  "useTabs": false,
  "tabWidth": 2,
  "semi": false,
	"bracketSameLine": false,
  "importOrder": [
		"<THIRD_PARTY_MODULES>",

		"(.scss)$",

		"^@/components/(.*)$",

		"(.interface)(.*)$",

		"^@/core/services/(.*)$",
		"^@/core/providers/(.*)$",
		"^@/core/hooks/(.*)$",
		"^@/core/store/(.*)$",
		"^@/core/types/(.*)$",
		"^@/core/helpers/(.*)$",
		"^@/core/utils/(.*)$",
		"^@/core/(.*)$",

		"^@/assets/(.*)$",

		"^../(.*)",
	
		"^react-icons",
		
		"^public/(.*)$"
	],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}