{
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
  "trailingComma": "none",
  "arrowParens": "avoid",
  "singleQuote": true,
  "printWidth": 120, 
  "useTabs": false,
  "tabWidth": 2,
  "semi": false,
	"bracketSameLine": false,
  "importOrder": [
		"<THIRD_PARTY_MODULES>",
		"(.interface)(.*)$",

		"^react-icons",

		"^@/core/(.*)$",
		"^@/components/(.*)$",
		"^@/providers/(.*)$",
		"^@/services/(.*)$",
		"^@/assets/(.*)$",
		"^@/types/(.*)$",
		"^@/hooks/(.*)$",

		"^../(.*)",
		"(.scss)$",
		"^public/(.*)$"
	],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}